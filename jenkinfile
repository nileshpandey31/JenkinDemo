
pipeline {
    agent any
    stages {
        stage('Stage 1') {
            steps {
              echo "Hi Nilesh"
            }
        }
        stage('Confirm') {
            steps {
                input 'Proceed to next stage?'
            }
            
        }
        stage('Stage 2') {
            steps {
           

            echo ${build}
            if(env.build=='yes')
            {
                             bat """ 
    
    "C:\\Users\\nilesh\\AppData\\Local\\Programs\\Python\\Python38-32\\python.exe" Hellojenkin.py

    """

            }
            else
            {
                 echo "No build is selected hence skipping python script execution"

            }
             
            
            }
        }
    }
}